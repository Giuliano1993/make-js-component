{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["src/stubs/*", "*.js", "*.cjs", "*.mjs", "src/components"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"arrowParentheses": "asNeeded",
			"jsxQuoteStyle": "double",
			"semicolons": "always",
			"trailingComma": "es5",
			"quoteProperties": "asNeeded",
			"bracketSameLine": true
		}
	}
}
